{
  "name": "Date Formatter",
  "description": "Format dates from any HubSpot object property into various international formats",
  "actionDefinition": {
    "actionType": "INTEGRATION_ACTION",
    "published": true,
    "inputFields": [
      {
        "typeDefinition": {
          "name": "sourceDateField",
          "type": "string",
          "fieldType": "text"
        },
        "displayOrder": 0,
        "isRequired": true,
        "label": "Date field",
        "description": "Enter dynamic token for any date or string field",
        "helpText": "Examples: {{contact.createdate}}, {{deal.custom_date}}, {{custom_object.date_field}}",
        "placeholder": "{{object.property}}"
      },
      {
        "typeDefinition": {
          "name": "sourceFormat",
          "type": "enumeration",
          "fieldType": "select",
          "options": [
            {
              "label": "Auto-detect",
              "value": "AUTO"
            },
            {
              "label": "HubSpot DateTime (2025-01-24T10:30:00Z)",
              "value": "HUBSPOT_DATETIME"
            },
            {
              "label": "ISO Date (2025-01-24)",
              "value": "ISO_DATE"
            },
            {
              "label": "US Format (01/24/2025)",
              "value": "US_FORMAT"
            },
            {
              "label": "UK Format (24/01/2025)",
              "value": "UK_FORMAT"
            },
            {
              "label": "EU Format (24.01.2025)",
              "value": "EU_FORMAT"
            },
            {
              "label": "Unix Timestamp (1737715800)",
              "value": "UNIX_TIMESTAMP"
            },
            {
              "label": "Written Date (January 24, 2025)",
              "value": "WRITTEN_DATE"
            },
            {
              "label": "Taiwan Format (2025年01月24日)",
              "value": "TAIWAN_FORMAT"
            },
            {
              "label": "Korea Format (2025년 01월 24일)",
              "value": "KOREA_FORMAT"
            }
          ]
        },
        "displayOrder": 1,
        "isRequired": true,
        "label": "Source format",
        "description": "How is the source date formatted?",
        "helpText": "Select the format that matches your source date field"
      },
      {
        "typeDefinition": {
          "name": "targetFormat",
          "type": "enumeration",
          "fieldType": "select",
          "options": [
            {
              "label": "US Format (01/24/2025)",
              "value": "US_STANDARD"
            },
            {
              "label": "UK Format (24/01/2025)",
              "value": "UK_STANDARD"
            },
            {
              "label": "ISO Format (2025-01-24)",
              "value": "ISO_STANDARD"
            },
            {
              "label": "US Written (January 24, 2025)",
              "value": "US_WRITTEN"
            },
            {
              "label": "EU Written (24 January 2025)",
              "value": "EU_WRITTEN"
            },
            {
              "label": "Taiwan Format (2025年01月24日)",
              "value": "TAIWAN_STANDARD"
            },
            {
              "label": "Hong Kong Format (24/01/2025)",
              "value": "HONG_KONG_STANDARD"
            },
            {
              "label": "Korea Format (2025년 01월 24일)",
              "value": "KOREA_STANDARD"
            },
            {
              "label": "Custom Format",
              "value": "CUSTOM"
            }
          ]
        },
        "displayOrder": 2,
        "isRequired": true,
        "label": "Target format",
        "description": "Choose the desired output format",
        "helpText": "Select how you want the date to be formatted"
      },
      {
        "typeDefinition": {
          "name": "customTargetFormat",
          "type": "string",
          "fieldType": "text"
        },
        "displayOrder": 3,
        "isRequired": false,
        "label": "Custom format pattern",
        "description": "Enter custom format pattern when 'Custom Format' is selected",
        "helpText": "Use YYYY=year, MM=month, DD=day, MMM=short month, MMMM=full month. Examples: 'DD-MM-YYYY', 'YYYY/MM/DD', 'MMM DD, YYYY'",
        "placeholder": "DD-MM-YYYY",
        "dependentFieldFilters": [
          {
            "formFieldName": "targetFormat",
            "responseType": "EQUAL",
            "filterType": "ENUMERATION",
            "enumeration": "CUSTOM"
          }
        ]
      }
    ],
    "outputFields": [
      {
        "typeDefinition": {
          "name": "formattedDate",
          "type": "string",
          "fieldType": "text"
        },
        "label": "Formatted date",
        "description": "The date formatted according to the target format"
      },
      {
        "typeDefinition": {
          "name": "originalDate",
          "type": "string",
          "fieldType": "text"
        },
        "label": "Original date",
        "description": "The original date value for reference"
      },
      {
        "typeDefinition": {
          "name": "format",
          "type": "string",
          "fieldType": "text"
        },
        "label": "Applied format",
        "description": "The format that was applied to the date"
      },
      {
        "typeDefinition": {
          "name": "error",
          "type": "string",
          "fieldType": "text"
        },
        "label": "Error message",
        "description": "Error message if date formatting failed (empty if successful)"
      }
    ],
    "executionUri": "https://your-domain.vercel.app/api/webhook/date-formatter",
    "actionDefinitionId": "date-formatter-action"
  },
  "categories": [
    "DATA_QUALITY",
    "PRODUCTIVITY"
  ],
  "tags": [
    "date",
    "formatting",
    "international",
    "localization",
    "data-transformation"
  ]
}